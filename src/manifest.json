{
  "manifest_version": 2,
  "name": "Tabli",
  "description": "A simple, powerful tab manager",
  "version": "0.9.5",
  "browser_action": {
    "default_icon": "images/glyphicons_154_more_windows.png",
    "default_popup": "popup.html",
    "default_title": "Tabli"
  },
  "background": {
    "scripts": [
      "js/common.js",
      "js/bgHelper.bundle.js"
    ],
    "persistent": true
  },
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "bookmarks",
    "chrome://favicon/*"
  ],
  "icons": {
    "16": "images/glyphicons_154_more_windows.png",
    "48": "images/Multimedia-12-48.png",
    "128": "images/Multimedia-12-128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "MacCtrl+Period"
      }
    },
    "show_popout": {
      "description": "Show the Tabli popout window",
      "global": true,
      "suggested_key": {
        "default": "Ctrl+Comma",
        "mac": "MacCtrl+Comma"
      }
    }
  }
}
